<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="Redirect EN" stopProcessing="true">
                    <match url="^(.*)\/EN$" />
                    <action type="Rewrite" url="{R:1}" />
                </rule>
                <rule name="Redirect ES" stopProcessing="true">
                    <match url="^(.*)\/ES$" />
                    <action type="Rewrite" url="{R:1}" />
                </rule>
                <rule name="Redirect PT" stopProcessing="true">
                    <match url="^(.*)\/PT$" />
                    <action type="Rewrite" url="{R:1}" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration> 